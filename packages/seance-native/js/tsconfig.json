{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext", 
    "lib": ["esnext"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}